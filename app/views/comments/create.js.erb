<% if logged_in?  && @comment.save %>
  $.pnotify({
         text: '评论成功.',
         history: false,
         type: 'success',
         delay: '1000'
     });
   $(document).scrollTop($('div#comments').offset().top);
   $('div#comments').prepend('<%= js_escape_html(partial("posts/comment", :object => @comment)).html_safe %>');
   jQuery("abbr.timeago").timeago();
   jQuery("#comment_content").val('');

<% else %>

$.pnotify({
       text: "<%= logged_in? ? '评论失败.' : '请登录后评论.' %>",
       history: false,
       type: 'error',
       delay: '2000'
   });
<% end %>
